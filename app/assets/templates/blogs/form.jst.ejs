<div class="container">
  <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="well well-sm">
          <form>
          <fieldset>
            <legend class="text-center"><h1><%= blog.isNew() ? 'New Blog' : 'Edit Blog' %></h1></legend>

            <div class="form-group">
              <label class="col-md-5 control-label" for="title">Title</label>
              <div class="col-md-12">
                <input id="title" name="title" type="text" value='<%= blog.escape('title') %>' class="form-control">
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-12 text-right"><br>
                <button class="btn btn-info btn-lg submit-post">Submit</button>
                <a class="btn btn-primary btn-lg" href='#/'>Back</a>
              </div>
            </div>
          </fieldset>
          </form>
        </div>
      </div>
  </div>
</div>
