<div class="container">
  <div class="row vertical-offset-100">
      <div class="col-md-4 col-md-offset-4">
          <div class="panel">
              <div class="panel-heading">
                  <div class="row-fluid user-row">
                      <img src="<%= image_url("logo.png") %>" class="img-responsive" alt="Conxole Admin"/>
                  </div>
              </div>
              <div class="panel-body">
                  <form class="sign-in" action="/session" method="post" class="form-signin">
                    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                      <fieldset>
                          <label class="panel-login">
                              <div class="login_result"></div>
                          </label>
                          <input id="email" name="user[email]" class="form-control" placeholder="Username" type="text" autofocus>
                          <input id="password" name="user[password]" class="form-control" placeholder="Password" type="password">
                          <br></br>
                          <input class="btn btn-success btn-block submit" type="submit" id="login" value="Login »">
                      </fieldset>
                  </form>
                  <button type="button" class="guest btn btn-primary btn-block">Guest Login »</button>
              </div>
          </div>
      </div>
  </div>
</div>
